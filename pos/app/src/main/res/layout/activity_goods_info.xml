<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#EBF6FD"
                android:orientation="horizontal"
                android:paddingTop="13dp">

                <ImageView
                    android:id="@+id/goods_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_1" />

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:text="秋冬新款女式毛呢大衣双层加厚长款大衣"
                    android:textColor="@color/color_33"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/goods_code"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="商品编码：265987123456"
                android:textColor="@color/color_33"
                android:textSize="13dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#EBEBEB" />

            <LinearLayout
                android:id="@+id/sku_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<include layout="@layout/item_sku_layout" />-->

                <!--<include layout="@layout/item_sku_layout" />-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#EBEBEB" />

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="价格："
                        android:textColor="@color/color_33"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        tools:text="168.00"
                        android:textColor="#ff5c00"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/goods_price_modify_btn"
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:src="@drawable/modify" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/discount_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="折扣："
                        android:textColor="@color/color_33"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/discount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="折扣："
                        android:textColor="@color/color_33"
                        android:textSize="13dp" />
                    <ImageView
                        android:id="@+id/discount__modify_btn"
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:src="@drawable/modify"/>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#EBEBEB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="数量："
                    android:textColor="@color/color_33"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/input_bg_square"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/goods_num_reduce_btn"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:src="@drawable/reduce" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#EBEBEB" />

                    <TextView
                        android:id="@+id/goods_num"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ff5c00"
                        android:textSize="18dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#EBEBEB" />

                    <ImageView
                        android:id="@+id/goods_num_plus_btn"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:src="@drawable/plus" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EBEBEB" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <TextView
            android:id="@+id/goods_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_white"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_33"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/goods_add_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_blue"
            android:clickable="true"
            android:gravity="center"
            android:text="添加"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>
