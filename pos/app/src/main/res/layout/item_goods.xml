<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/item_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="#333333"
                                android:textSize="13dp"
                                tools:text="秋冬新款女式毛妮大衣双层加厚长款大衣秋冬新款" />

                            <ImageView
                                android:id="@+id/item_edit_btn"
                                android:layout_width="45dp"
                                android:layout_height="30dp"
                                android:clickable="true"
                                android:paddingBottom="10dp"
                                android:paddingLeft="25dp"
                                android:src="@drawable/edit" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">

                            <TextView
                                android:id="@+id/item_sku"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textColor="#999999"
                                android:textSize="11dp"
                                tools:text="颜色:黑色#尺码:XXL"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/item_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="3dp"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:lines="1"
                                android:textColor="#333333"
                                android:textSize="15dp"
                                tools:text="X 5"
                                android:layout_marginBottom="5dp"/>

                            <TextView
                                android:id="@+id/item_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:layout_toLeftOf="@id/item_num"
                                android:ellipsize="end"
                                android:lines="1"
                                android:paddingLeft="5dp"
                                android:textColor="#999999"
                                android:textSize="11dp"
                                tools:text="￥180.00"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:id="@+id/item_price_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@id/item_price"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:lines="1"
                                android:textColor="#ff5c00"
                                android:textSize="11dp"
                                tools:text="￥168.00"
                                android:layout_centerVertical="true" />


                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/item_del_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/color_red_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="删除"
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </LinearLayout>


    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#C5C5C5" />
</LinearLayout>


    
