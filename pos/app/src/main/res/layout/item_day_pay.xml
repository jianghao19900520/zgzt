<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/item_time"
        android:layout_width="52.5dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_33"
        android:textSize="11dp"
        android:text="12:30"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="#d1d1d1"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/item_pay_type"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/wechat_s"/>
        <View
            android:id="@+id/item_button_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:paddingTop="6dp"
                    android:textColor="#ff5c00"
                    android:text="￥1234.56"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/item_order_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="@color/color_66"
                    android:text="订单编号：0000012456789545"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/item_revoke_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="11dp"
                android:padding="10dp"
                android:clickable="true"
                android:textColor="@color/color_blue"
                android:text="撤销"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>