<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/include_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="#f1f1f1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="单据编号："/>
                    <TextView
                        android:id="@+id/order_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="37dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="DBD20171101123456"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f1f1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="调  出  仓："
                        android:textColor="@color/color_33"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/out_stock"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="37dp"
                        android:gravity="center_vertical"
                        android:text="深圳八号仓库"
                        android:textColor="@color/color_33"
                        android:textSize="13dp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f1f1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="调  入  仓："/>
                    <TextView
                        android:id="@+id/in_stock"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="37dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="华南体验店"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f1f1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="单据日期："/>
                    <TextView
                        android:id="@+id/order_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="37dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="2018-03-03"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f1f1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="制  单  人："/>
                    <TextView
                        android:id="@+id/single_person"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="37dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="制单人"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f1f1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:paddingTop="9dp"
                    android:paddingBottom="7.5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="备        注："/>
                    <TextView
                        android:id="@+id/remarks_info"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="37dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="这就是个备注而已这就是"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f1f1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="快递名称："/>
                    <LinearLayout
                        android:id="@+id/express_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="37dp"
                        android:clickable="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/express"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_33"
                            android:hint="请选择快递名称"
                            android:textSize="13dp"
                            android:textColorHint="@color/color_99"/>
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/extend"/>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f1f1f1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:text="快递单号："/>
                    <EditText
                        android:id="@+id/express_code_input"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="37dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_33"
                        android:textSize="13dp"
                        android:lines="1"
                        android:maxLength="20"
                        android:hint="请输入快递单号"
                        android:text=""/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_33"
                android:text="商品信息"
                android:textSize="13dp"/>
            <LinearLayout
                android:id="@+id/goods_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
